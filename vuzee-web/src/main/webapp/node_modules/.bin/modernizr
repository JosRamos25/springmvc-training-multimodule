#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../resources/modernizr/bin/modernizr" "$@"
  ret=$?
else 
  node  "$basedir/../../resources/modernizr/bin/modernizr" "$@"
  ret=$?
fi
exit $ret
